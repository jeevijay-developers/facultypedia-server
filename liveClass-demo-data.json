  "testingInstructions": {
    "apiBaseUrl": "http://localhost:5000/api/live-classes",
    "testingSteps": [
      {
        "step": 1,
        "action": "Create a new live class",
        "method": "POST",
        "endpoint": "/api/live-classes",
        "description": "Use any live class data from demoLiveClassData array"
      },
      {
        "step": 2,
        "action": "Get all live classes with pagination",
        "method": "GET",
        "endpoint": "/api/live-classes?page=1&limit=5",
        "description": "Retrieve live classes with pagination"
      },
      {
        "step": 3,
        "action": "Filter by specialization",
        "method": "GET",
        "endpoint": "/api/live-classes?liveClassSpecification=IIT-JEE",
        "description": "Get live classes with IIT-JEE specialization"
      },
      {
        "step": 4,
        "action": "Filter by subject",
        "method": "GET",
        "endpoint": "/api/live-classes?subject=Physics",
        "description": "Get live classes for Physics subject"
      },
      {
        "step": 5,
        "action": "Get live class by ID",
        "method": "GET",
        "endpoint": "/api/live-classes/{liveClassId}",
        "description": "Replace {liveClassId} with actual live class ID from create response"
      },
      {
        "step": 6,
        "action": "Update live class",
        "method": "PUT",
        "endpoint": "/api/live-classes/{liveClassId}",
        "description": "Update live class with partial data"
      },
      {
        "step": 7,
        "action": "Get live classes by educator",
        "method": "GET",
        "endpoint": "/api/live-classes/educator/{educatorId}",
        "description": "Get all live classes by a specific educator"
      },
      {
        "step": 8,
        "action": "Get live classes by class",
        "method": "GET",
        "endpoint": "/api/live-classes/class/Class 12th",
        "description": "Get live classes for Class 12th"
      },
      {
        "step": 9,
        "action": "Enroll student in live class",
        "method": "POST",
        "endpoint": "/api/live-classes/{liveClassId}/enroll",
        "body": { "studentId": "64a7f8d9e1234567890abcxyz" },
        "description": "Enroll a student in live class"
      },
      {
        "step": 10,
        "action": "Mark attendance",
        "method": "POST",
        "endpoint": "/api/live-classes/{liveClassId}/attendance",
        "body": { "studentId": "64a7f8d9e1234567890abcxyz", "attendanceTime": 60 },
        "description": "Mark student attendance in minutes"
      },
      {
        "step": 11,
        "action": "Delete live class",
        "method": "DELETE",
        "endpoint": "/api/live-classes/{liveClassId}",
        "description": "Delete a live class"
      }
    ]
  },
