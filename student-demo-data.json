  "testingInstructions": {
    "apiBaseUrl": "http://localhost:3000/api/students",
    "testingSteps": [
      {
        "step": 1,
        "action": "Create a new student",
        "method": "POST",
        "endpoint": "/api/students",
        "description": "Use any student data from the demoStudentData array above"
      },
      {
        "step": 2,
        "action": "Get all students with pagination",
        "method": "GET", 
        "endpoint": "/api/students?page=1&limit=5",
        "description": "Retrieve students with pagination"
      },
      {
        "step": 3,
        "action": "Filter students by specialization",
        "method": "GET",
        "endpoint": "/api/students?specialization=IIT-JEE",
        "description": "Get students with IIT-JEE specialization"
      },
      {
        "step": 4,
        "action": "Get student by ID",
        "method": "GET",
        "endpoint": "/api/students/{studentId}",
        "description": "Replace {studentId} with actual student ID from create response"
      },
      {
        "step": 5,
        "action": "Get student by username",
        "method": "GET",
        "endpoint": "/api/students/username/aarav_sharma123",
        "description": "Get student by their username"
      },
      {
        "step": 6,
        "action": "Update student profile",
        "method": "PUT",
        "endpoint": "/api/students/{studentId}",
        "description": "Update student with partial data like { \"name\": \"Updated Name\" }"
      },
      {
        "step": 7,
        "action": "Enroll student in course",
        "method": "POST",
        "endpoint": "/api/students/{studentId}/enroll",
        "body": { "courseId": "64a7f8d9e1234567890abcde" },
        "description": "Enroll student in a course"
      },
      {
        "step": 8,
        "action": "Follow an educator",
        "method": "POST",
        "endpoint": "/api/students/{studentId}/follow",
        "body": { "educatorId": "64a7f8d9e1234567890abcef" },
        "description": "Make student follow an educator"
      },
      {
        "step": 9,
        "action": "Get student statistics",
        "method": "GET",
        "endpoint": "/api/students/{studentId}/statistics",
        "description": "Get student performance statistics"
      },
      {
        "step": 10,
        "action": "Get students by class",
        "method": "GET",
        "endpoint": "/api/students/class/Class 12th",
        "description": "Get all students in Class 12th"
      },
      {
        "step": 11,
        "action": "Update student password",
        "method": "PUT",
        "endpoint": "/api/students/{studentId}/password",
        "body": { "currentPassword": "oldPassword", "newPassword": "NewPass@123" },
        "description": "Update student password"
      }
    ]
  },
